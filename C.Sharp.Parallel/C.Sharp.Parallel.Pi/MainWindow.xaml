<Window x:Class="C.Sharp.Parallel.Pi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C.Sharp.Parallel.Pi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <CheckBox x:Name="checkBox" Content="Test" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="sync_button" Content="Sync" HorizontalAlignment="Left" Margin="10,262,0,0" VerticalAlignment="Top" Width="230" Height="48" Click="sync_button_Click" />
        <Button x:Name="async_button" Content="Async" HorizontalAlignment="Left" Margin="252,262,0,0" VerticalAlignment="Top" Width="230" Height="48" Click="async_button_Click"/>
        <Label x:Name="result_label" Content="Label" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="358"/>
    </Grid>
</Window>
